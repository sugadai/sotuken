        <p>メールアドレス</p>
        <h3 id="ex2"><%= locals.email %> </h3>
      <!-- 閉じるボタン -->
      <form action="/delete/<%= locals.userId %> " method="post">
      <table>
          <td><button type="button" class="js-cancel button-cancel">キャンセル</button></td>
          <td><button type="submit" class="js-ok button-ok">削除</button></td>
      </table>
  </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script>
         $("#deletebtn").click(function(){
                // username = document.getElementById("ex1");
                // email = document.getElementById("ex2");

        
                $(function () {
                $("#overlay, .modal-window").fadeIn();
                });
    
                $(".js-cancel").on("click",function () {
                $("#overlay, .modal-window").fadeOut();
                });
                $(".js-ok").on("click",function () {
                window.location.href = "https://www.kca.ac.jp/";
                });
                });
        </script>

</body>

</html>